{% extends 'base.html.twig' %}

{%  block title %}
    Eco-Service - Commande validé
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/app.css">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block sidebar %}

{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <h2>Commande Confirmée</h2>
                <h5>N° de de commande : {{ order.id }}</h5>
                <p> Total : {{ order.price }}€</p>
                <p><b>{{ order.address.dest }}</b></p>
                <ul class="list-group text-start">
                    {% for item in order.orderList %}
                        <li class="list-group">{{ item.name}} <span >x{{ item.qty }}</span></li>
                    {% endfor %}
                </ul>


                <p>
                    {{ order.address.address1 }} <br>
                    {{ order.address.address2 }} <br>
                    {{ order.address.city }} <br>
                    {{ order.address.zip_code }} <br>
                    {{ order.address.country }} <br>
                </p>
            </div>
        </div>
    </div>

</div>


{% endblock %}