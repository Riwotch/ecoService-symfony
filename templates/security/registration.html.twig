{% extends 'base.html.twig' %}

{%  block title %}
    Eco-Service - S'enregistrer
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/app.css">
{% endblock %}

{% block body %}
    <div id="content">
        <div class="container mt-xl-5 mb-xl-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">S'enregistrer</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form)}}
                        <div class="row flex-center">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.first_name, {'label' : 'Pr√©nom *', 'attr' : {'class': 'form-control input-sm'}}) }}
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.last_name, {'label' : 'Nom *', 'attr' : {'class': 'form-control input-sm'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.mail, {'label' : 'Email *', 'attr' : {'class': 'form-control input-sm'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.password, {'label' : 'Mot de passe *', 'attr' : {'class': 'form-control input-sm'}}) }}

                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    {{ form_row(form.confirm_password, {'label' : 'Confirmez mot de passe *', 'attr' : {'class': 'form-control input-sm'}}) }}
                                </div>
                            </div>
                        </div>

                        <input type="submit" value="S'enregistrer" class="btn btn-success btn-block">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}