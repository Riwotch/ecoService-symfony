{% extends 'base.html.twig' %}

{%  block title %}
    Eco-Service - Editer un produit
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="../../css/app.css">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block sidebar %}

{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 150px;">
        <div class="row">
            <div class="col-6">
                <p>Ajouté le : {{ product.createdAt|date('d-m-Y') }}</p>
                <p>Modifié le : {{ product.ModifiedAt|date('d-m-Y') }}</p>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.category) }}
                {{ form_rest(form) }}
                <button class="btn btn-secondary">Modifier</button>
                {{ form_end(form) }}

            </div>
            <div class="col-4">
                <img src="../../{{ imagepath ~ product.img }}" width="558" style="height: 55%;"/>
            </div>
        </div>
    </div>

{% endblock %}